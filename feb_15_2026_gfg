class Solution {
  public:
    int findMinDiff(vector<int>& arr, int m) {
        int n = arr.size();
        
        if(m == 0 || n == 0) 
            return 0;
            
        if(n < m) 
            return -1; 
        
        sort(arr.begin(), arr.end());
        
        int minDiff = INT_MAX;
        
        for(int i = 0; i <= n - m; i++) {
            int diff = arr[i + m - 1] - arr[i];
            minDiff = min(minDiff, diff);
        }
        
        return minDiff;
    }
};
