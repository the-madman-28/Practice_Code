/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    long long totalSum = 0;
    long long ans = 0;
    static const int MOD = 1e9 + 7;

    // First DFS: compute total tree sum
    long long buildSubtreeSum(TreeNode* root) {
        if (!root) return 0;

        long long left = buildSubtreeSum(root->left);
        long long right = buildSubtreeSum(root->right);

        return left + right + root->val;
    }

    // Second DFS: try all possible splits
    long long traverse(TreeNode* root) {
        if (!root) return 0;

        long long left = traverse(root->left);
        long long right = traverse(root->right);

        if (root->left) {
            ans = max(ans, left * (totalSum - left));
        }

        if (root->right) {
            ans = max(ans, right * (totalSum - right));
        }

        return left + right + root->val;
    }

    int maxProduct(TreeNode* root) {
        totalSum = buildSubtreeSum(root);
        traverse(root);
        return ans % MOD;
    }
};
